{
	"extends": "@stefanprobst/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"exactOptionalPropertyTypes": false,
		"paths": {
			"contentlayer/generated": ["./.contentlayer/generated"],
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": true
	},
	"include": [
		"./src/types/*.d.ts",
		"./next-env.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		".next/types/**/*.ts",
		"./*.config.js",
		"./.contentlayer/generated"
	],
	"exclude": ["node_modules"]
}
