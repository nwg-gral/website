{
	"name": "@nwg-gral/website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"app:build": "next build --experimental-next-config-strip-types",
		"app:dev": "next dev --experimental-next-config-strip-types",
		"build": "run-s content:build app:build",
		"content:build": "dotenv -c -- tsx ./scripts/generate-content.ts build",
		"content:dev": "dotenv -c -- tsx ./scripts/generate-content.ts watch",
		"dev": "concurrently --kill-others --names \"content,app\" --prefix-colors \"auto\" \"pnpm:content:dev\" \"pnpm:app:dev\"",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./styles/**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup types:prepare",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "next start --experimental-next-config-strip-types",
		"types:check": "tsc --noEmit",
		"types:prepare": "next typegen"
	},
	"dependencies": {
		"@acdh-oeaw/keystatic-lib": "^0.8.0",
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/mdx-lib": "^0.1.4",
		"@acdh-oeaw/validate-env": "^0.1.1",
		"@keystatic/core": "^0.5.48",
		"@keystatic/next": "^5.0.4",
		"@mdx-js/mdx": "^3.1.1",
		"@sindresorhus/slugify": "^3.0.0",
		"@valibot/i18n": "^1.0.0",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"image-size": "^2.0.2",
		"next": "^16.0.1",
		"next-intl": "^4.4.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-smartypants": "^3.0.2",
		"sharp": "^0.34.4",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"valibot": "^1.1.0",
		"vfile": "^6.0.3"
	},
	"devDependencies": {
		"@acdh-oeaw/content-lib": "^0.1.2",
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-next": "^4.0.3",
		"@acdh-oeaw/eslint-config-react": "^3.0.2",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@next/eslint-plugin-next": "^16.0.1",
		"@tailwindcss/postcss": "^4.1.16",
		"@types/hast": "^3.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.19.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"concurrently": "^9.2.1",
		"dotenv-cli": "^11.0.0",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.25.0",
		"tailwindcss": "^4.1.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
