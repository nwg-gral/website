{
	"name": "@nwg-gral/website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"pnpm": "8.x"
	},
	"packageManager": "pnpm@8.14.1",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --no-lint",
		"build": "next build",
		"dev": "next dev",
		"dev:cms": "decap-server",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ignore-path ./.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "next start",
		"test": "exit 0",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"dependencies": {
		"@sendgrid/mail": "^8.1.0",
		"@stefanprobst/lib": "^0.1.3",
		"@stefanprobst/netlify-cms-oauth-client": "^0.2.0",
		"@t3-oss/env-nextjs": "^0.7.3",
		"clsx": "^2.1.0",
		"date-fns": "^3.2.0",
		"next": "^14.0.4",
		"next-intl": "3.4.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-schemaorg": "^2.0.0",
		"server-only": "^0.0.1",
		"sharp": "^0.33.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.4",
		"@stefanprobst/commitlint-config": "^1.0.3",
		"@stefanprobst/eslint-config": "^1.2.1",
		"@stefanprobst/eslint-config-next": "^7.0.10",
		"@stefanprobst/eslint-config-react": "^1.0.9",
		"@stefanprobst/prettier-config": "^4.0.1",
		"@stefanprobst/stylelint-config": "^5.0.1",
		"@stefanprobst/tsconfig": "^3.0.4",
		"@tailwindcss/typography": "^0.5.10",
		"@types/node": "^20.11.0",
		"@types/react": "^18.2.47",
		"@types/react-dom": "^18.2.18",
		"autoprefixer": "^10.4.16",
		"contentlayer": "^0.3.4",
		"decap-server": "^3.0.1",
		"eslint": "^8.56.0",
		"eslint-plugin-tailwindcss": "^3.13.1",
		"hash-wasm": "^4.11.0",
		"image-size": "^1.1.1",
		"lint-staged": "^15.2.0",
		"next-contentlayer": "^0.3.4",
		"npm-run-all2": "^6.1.1",
		"postcss": "^8.4.33",
		"prettier": "^3.2.1",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^16.1.0",
		"tailwindcss": "^3.4.1",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.3.3"
	},
	"pnpm": {
		"overrides": {
			"next": "$next"
		}
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"commitlint": {
		"extends": "@stefanprobst/commitlint-config"
	},
	"eslintConfig": {
		"extends": [
			"@stefanprobst/eslint-config",
			"@stefanprobst/eslint-config-react",
			"@stefanprobst/eslint-config-next",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"settings": {
			"tailwindcss": {
				"callees": [
					"cn"
				]
			}
		}
	},
	"lint-staged": {
		"*.@(cjs|js|mjs|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(cjs|css|js|mjs|ts|tsx)": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	},
	"stylelint": {
		"extends": "@stefanprobst/stylelint-config"
	}
}
